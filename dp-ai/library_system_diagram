// Library System
digraph {
	Book [label="Book
+title: string
+author: string
+publisher: string
+bookcopy: string
+category: string
+searchByTitle(): void
+searchByAuthor(): void"]
	Loan [label="Loan
+loanID: int
+dueDate: date
+isReturned: bool
+returnBook(): void"]
	Bookcopy [label="Bookcopy
+copyID: int
+status: string
+isAvailable(): bool"]
	Member [label="Member
+memberID: int
+name: string
+email: string
+borrowBook(): void
+returnBook(): void"]
	Librarian [label="Librarian
+librarianID: int
+name: string
+manageAccount(): void
+processReturn(): void"]
	Book -> Loan [label=loan]
	Book -> Bookcopy [label=copies]
	Bookcopy -> Loan [label="loaned via"]
	Member -> Loan [label=borrows]
	Librarian -> Loan [label=manages]
}
